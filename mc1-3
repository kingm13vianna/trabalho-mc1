#include <iostream>
using namespace std;

int abs(int x) {
    return x < 0 ? -x : x;
}

int dividir(int a, int b) {
    if (b == 0) {
      cout << "divisÃ£o por 0" << endl;
        return 0;
    }

    bool negativo = ( a < 0) != ( b < 0);
    int x = abs(a);
    int y = abs(b);

    int quociente = 0;
    while (x >= y){
        x -= y;
        quociente++;
    }

    return negativo ? -quociente : quociente;

}

int mod(int a, int b) {
    if (b == 0){
        cout << "mod por 0" << endl;
        return 0;
    }

    int quociente = dividir(a, b);
    int resto = a - quociente * b;

    if (resto < 0){
        resto += abs(b);
    }

    return resto;
}

int main() {
    int a, b;
    cout << "digite a: ";
    cin >> a;
    cout << "digite b: ";
    cin >> b;

    int resultado = mod(a, b);
    cout << "resultado de " << a << " mod " << b << " = " << resultado << endl;

    return 0;
}
