#include <iostream>
using namespace std;

int modulo(int dividendo, int divisor) {
    if (divisor == 0) {
        return 0;
    }

    bool negativo = false;
    if (dividendo < 0) {
        negativo = true;
        dividendo = -dividendo;
    }
    if (divisor < 0) {
        divisor = -divisor;
    }

    while (dividendo >= divisor) {
        dividendo = dividendo - divisor;
    }

    if (negativo) {
        return -dividendo;
    }

    return dividendo;
}

int main() {
    cout << modulo(10, 3) << endl;   // 1
    cout << modulo(15, -4) << endl;  // 3
    cout << modulo(-20, 6) << endl;  // -2
    cout << modulo(-7, -3) << endl;  // -1
    cout << modulo(5, 0) << endl;    // 0
}
