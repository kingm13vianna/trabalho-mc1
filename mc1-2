#include <iostream>
using namespace std;

int divide(int dividend, int divisor) {
    if (divisor == 0) {
        return 0; 
    }

    bool negative = false;
    if (dividend < 0) {
        negative = !negative;
        dividend = -dividend;
    }
    if (divisor < 0) {
        negative = !negative;
        divisor = -divisor;
    }

    int quotient = 0;
    while (dividend >= divisor) {
        dividend = dividend - divisor;
        quotient = quotient + 1;
    }

    if (negative) {
        quotient = -quotient;
    }

    return quotient;
}

int main() {
    cout << divide(10, 3) << endl;   // 3
    cout << divide(15, -3) << endl;  // -5
    cout << divide(-20, 4) << endl;  // -5
    cout << divide(-7, -2) << endl;  // 3
    cout << divide(0, 5) << endl;    // 0
    cout << divide(5, 0 ) << endl;   // 0 
}
