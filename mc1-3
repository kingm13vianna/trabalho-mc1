#include <iostream>
using namespace std;

    struct Resultado {
    int quociente;
    int resto;
    };

    Resultado dividir(int a, int b) {
    if (b == 0) {
    cout << "erro; divisÃ£o por 0" << endl;
    return {0, 0};
    }

    int sinalquociente = 1;
    if ((a < 0) == (b < 0))
    sinalquociente = 1;
    else 
    sinalquociente = -1;

    int absA = 0;
    if (a < 0)
    absA = -a;
    else absA = a;

    int absB = 0;
    if (b < 0)
    absB = -b;
    else absB = b;

    int temp = absA;
    int quociente = 0;

    while (temp >= absB) {
    temp -= absB;
    quociente++;
    }

    int resto = temp;

    quociente *= sinalquociente;

    if (a < 0 && resto != 0) {
    quociente += 1;
    resto = absB - resto;
    }

    return {quociente, resto};
    }

    int main() {
    int a, b;
    cout << "digite o dividendo: ";
    cin >> a;
    cout << "digite o divisor: ";
    cin >> b;

    Resultado res = dividir(a, b);
    cout << "quociente: " << res.quociente << endl;
    cout << "resto: " << res.resto << endl;

    return 0;
    }
